{
  "rewrites": [
    { "source": "/(.*)", "destination": "/$1" }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "vercel-node@1",
      "memory": 256
    }
  }
}